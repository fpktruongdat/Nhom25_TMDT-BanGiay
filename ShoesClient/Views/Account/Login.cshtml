@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-area mb-130 mb-md-70 mb-sm-70 mb-xs-70 mb-xxs-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-md-50 mb-sm-50" style="margin: 0 auto">
                <div class="lezada-form login-form">
                    <form asp-action="Login" asp-controller="Account" method="POST">
                        <div class="row">
                            <div class="col-lg-12">
                                <!--=======  login title  =======-->

                                <div class="section-title section-title--login text-center mb-50">
                                    <h2 class="mb-20">Login</h2>
                                    <p>Great to have you back!</p>
                                </div>
                                @if (ViewData["message"] != null)
                                {
                                    <div class="text-danger"> @ViewData["message"]</div>
                                }
                                <!--=======  End of login title  =======-->
                            </div>
                            <div class="col-lg-12 mb-60">
                                <input type="text" asp-for="UserName" placeholder="Username or email address" required>
                            </div>
                            <div class="col-lg-12 mb-60">
                                <input type="password" asp-for="Password" placeholder="Password" required>
                            </div>
                            <div class="col-lg-12 text-center mb-30">
                                <input type="submit" value="Login" class="lezada-button lezada-button--medium">
                            </div>

                            <div class="col-lg-12">
                                <input type="checkbox"> <span class="remember-text">Remember me</span>
                                <a href="#" class="reset-pass-link">Lost your password?</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

