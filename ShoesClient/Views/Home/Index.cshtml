@model IEnumerable<Shoes>
@{
    ViewData["Title"] = "Home Page";
}

<div class="slider-area mb-100 mb-md-80 mb-sm-60">
    <!--=======  slider-wrapper  =======-->

    <div class="lezada-slick-slider lezada-slick-slider--fullscreen"
         data-slick-setting='{
            "slidesToShow": 1,
            "slidesToScroll": 1,
            "arrows": true,
            "dots": true,
            "autoplay": false,
            "autoplaySpeed": 5000,
            "speed": 1000,
            "prevArrow": {"buttonClass": "slick-prev", "iconClass": "ti-angle-left" },
            "nextArrow": {"buttonClass": "slick-next", "iconClass": "ti-angle-right" }
        }'>


        <!--=======  single slider  =======-->
        <div class="lezada-single-slider bg-img" data-bg="/assets/images/banners/banner-1.jpg">
            <div class="container h-100">
                <div class="row text-center text-lg-left justify-content-center justify-content-lg-end align-items-center h-100">
                    <div class="lezada-single-slider__content">
                        <h5 class="subtitle subtitle--black">NEW COLLECTION</h5>
                        <h2 class="main-title main-title--black">Trendy and Hot <br>  Collection </h2>
                        <a href="shop-left-sidebar.html" class="lezada-button lezada-button--dark lezada-button--medium">shop now</a>
                    </div>
                </div>
            </div>
        </div>

        <!--=======  End of single slider  =======-->
        <!--=======  single slider  =======-->
        <div class="lezada-single-slider bg-img" data-bg="/assets/images/banners/banner-2.jpg">
            <div class="container h-100">
                <div class="row text-center text-lg-left justify-content-center justify-content-lg-end align-items-center h-100">
                    <div class="lezada-single-slider__content">
                        <h5 class="subtitle subtitle--black">NEW COLLECTION</h5>
                        <h2 class="main-title main-title--black">Amazing<br> Design</h2>
                        <a href="shop-left-sidebar.html" class="lezada-button lezada-button--dark lezada-button--medium">shop now</a>
                    </div>
                </div>
            </div>
        </div>

        <!--=======  End of single slider  =======-->
        <!--=======  single slider  =======-->
        <div class="lezada-single-slider bg-img" data-bg="/assets/images/banners/banner-3.jpg">
            <div class="container h-100">
                <div class="row text-center text-lg-left justify-content-center justify-content-lg-end align-items-center h-100">
                    <div class="lezada-single-slider__content">
                        <h5 class="subtitle subtitle--black">NEW COLLECTION</h5>
                        <h2 class="main-title main-title--black">Amazing<br> Design</h2>
                        <a href="shop-left-sidebar.html" class="lezada-button lezada-button--dark lezada-button--medium">shop now</a>
                    </div>
                </div>
            </div>
        </div>

        <!--=======  End of single slider  =======-->


    </div>

    <!--=======  End of slider-wrapper  =======-->
</div>
<div class="section-title-container mb-80 mb-md-60 mb-sm-40">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  section title  =======-->

                <div class="section-title section-title--one text-center">
                    <h1>Best Product</h1>
                    <p class="subtitle subtitle--deep subtitle--trending-home">Lorem ipsum dolor sit amet, consecte tur cing elit.</p>
                </div>

                <!--=======  End of section title  =======-->
            </div>
        </div>
    </div>
</div>
<div class="product-isotope-area mb-100 mb-md-80 mb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  fitler titles  =======-->

                <div class="filter-title filter-title--type-one mb-70">
                    <ul class="product-filter-menu">
                        <li class="active" data-filter="*">All <span class="filter-separator">/</span></li>
                        <li data-filter=".new">New <span class="filter-separator">/</span> </li>
                        <li data-filter=".popular">Popular <span class="filter-separator">/</span> </li>
                        <li data-filter=".sale">sale</li>
                    </ul>
                </div>

                <!--=======  End of fitler titles  =======-->
            </div>

            <div class="col-lg-12">
                <div class="row product-isotope">
                    @foreach (var shoes in Model)
                    {

                        <!--=======  single product  =======-->
                        <div class="col-12 col-lg-4 col-md-6 col-sm-6 mb-45 @(shoes.IsOnNew?"new":"") @(shoes.IsOnSale?"sale":"") @(shoes.IsOnSale||shoes.IsOnNew?"popular":"")">
                            <div class="single-product">
                                <!--=======  single product image  =======-->
                                <div class="single-product__image">
                                    <a class="image-wrap" asp-controller="Shoes" asp-action="Details" asp-route-id="@shoes.ShoesId">
                                        <img src="@shoes.ImageThumbnailUrl" class="img-fluid" alt="">
                                        <img src="@shoes.ImageUrl" class="img-fluid" alt="">
                                    </a>
                                    <div class="single-product__floating-badges">
                                        @if (shoes.IsOnNew)
                                        {
                                            <span class="hot">hot</span>
                                        }
                                        @if (shoes.IsOnSale)
                                        {
                                            <span class="onsale">-10%</span>
                                        }
                                    </div>
                                    <div class="single-product__floating-icons">
                                        <span class="wishlist"><a href="#" data-tippy="Add to wishlist" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" data-tippy-placement="left"><i class="ion-android-favorite-outline"></i></a></span>
                                        <span class="compare"><a href="#" data-tippy="Compare" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" data-tippy-placement="left"><i class="ion-ios-shuffle-strong"></i></a></span>
                                        <span class="quickview"><a class="cd-trigger" href="#qv-1" data-tippy="Quick View" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder" data-tippy-placement="left"><i class="ion-ios-search-strong"></i></a></span>
                                    </div>
                                </div>
                                <!--=======  End of single product image  =======-->
                                <!--=======  single product content  =======-->

                                <div class="single-product__content">
                                    <div class="title">
                                        <h3> <a asp-controller="Shoes" asp-action="Details" asp-route-id="@shoes.ShoesId">@shoes.Name</a></h3>
                                        <a asp-controller="Shoes" asp-action="Details" asp-route-id="@shoes.ShoesId">Add to cart</a>
                                    </div>
                                    <div class="price">
                                        @if (shoes.IsOnSale == true)
                                        {

                                            <span class="main-price discounted">$@(shoes.Price + (shoes.Price * 10 / 100))</span>
                                            <span class="discounted-price">$@shoes.Price</span>
                                        }
                                        else
                                        {
                                            <span class="main-price">$@shoes.Price</span>
                                        }

                                    </div>
                                </div>

                                <!--=======  End of single product content  =======-->
                            </div>
                        </div>
                        <!--=======  End of single product  =======-->
                    }


                </div>


            </div>
        </div>
    </div>
</div>